{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
{% endblock %}

{% block title %}Hello AdditionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vos rÃ©sultats d'addition ðŸ§®</h1>

    <p>xmin: {{ inputs[0] }} / xmax: {{ inputs[1] }}</p>
    <p>ymin: {{ inputs[2] }} / ymax: {{ inputs[3] }}</p>

    {% if inputs is defined %}

    {% set valeurs = [] %}
    <!-- Liste des valeurs de y -->
    {% for i in inputs[2]..inputs[3] %}
        {% set valeurs = valeurs|merge([i]) %}
    {% endfor %}

    <table border="1">
        <!-- PremiÃ¨re ligne : Les valeurs de x -->
        <tr>
            <td></td>
            {% for i in inputs[0]..inputs[1] %}
                <td>{{ i }}</td>
            {% endfor %}
        </tr>
        <!-- Lignes ymin Ã  ymax -->
        {% for j in inputs[2]..inputs[3] %}
            <tr>
                <!-- PremiÃ¨re valeur de la ligne : Valeur de y -->
                <td>{{ valeurs|first }}</td>
                {% set valeurs = valeurs|slice(1,valeurs|length) %}
                
                <!-- Somme de x et y pour chaque colonne -->
                {% for k in inputs[0]..inputs[1] %}
                    <td>{{ j + k }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        
    </table>
    <!--{% for value in result %} {{ value }} {% endfor %}-->
    {% endif %}
</div>
{% endblock %}
